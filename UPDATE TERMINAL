    ["ocean"]="RED='\033[38;5;39m' GREEN='\033[38;5;45m' YELLOW='\033[38;5;51m' BLUE='\033[38;5;27m' PURPLE='\033[38;5;63m' CYAN='\033[38;5;87m' WHITE='\033[38;5;195m' ORANGE='\033[38;5;45m' BG_BLACK='\033[48;5;17m' BG_RED='\033[48;5;18m' BG_GREEN='\033[48;5;19m' NC='\033[0m'"
    ["rainbow"]="RED='\033[38;5;196m' GREEN='\033[38;5;46m' YELLOW='\033[38;5;226m' BLUE='\033[38;5;21m' PURPLE='\033[38;5;129m' CYAN='\033[38;5;51m' WHITE='\033[38;5;15m' ORANGE='\033[38;5;202m' BG_BLACK='\033[48;5;0m' BG_RED='\033[48;5;196m' BG_GREEN='\033[48;5;46m' NC='\033[0m'"
)

show_menu() {
    clear
    echo -e "\033[38;5;196mâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—\033[0m"
    echo -e "\033[38;5;46mâ•‘     Ð¡ÐœÐ•ÐÐ Ð¦Ð’Ð•Ð¢ÐžÐ’ÐžÐ™ Ð¡Ð¥Ð•ÐœÐ« - TERMINAL ENCRYPTOR     â•‘\033[0m"
    echo -e "\033[38;5;226mâ• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£\033[0m"
    echo -e "\033[38;5;21mâ•‘                                                  â•‘\033[0m"
    echo -e "\033[38;5;129mâ•‘  1. \033[38;5;196mâ–‰â–‰â–‰â–‰\033[38;5;129m Ð¡Ñ‚Ð°Ð½Ð´Ð°Ñ€Ñ‚Ð½Ð°Ñ ÑÑ…ÐµÐ¼Ð°                â•‘\033[0m"
    echo -e "\033[38;5;51mâ•‘  2. \033[38;5;196mâ–‰â–‰\033[38;5;46mâ–‰â–‰\033[38;5;226mâ–‰â–‰\033[38;5;51m Ð¢Ñ‘Ð¼Ð½Ð°Ñ ÑÑ…ÐµÐ¼Ð°                  â•‘\033[0m"
    echo -e "\033[38;5;15mâ•‘  3. \033[38;5;197mâ–‰â–‰\033[38;5;48mâ–‰â–‰\033[38;5;227mâ–‰â–‰\033[38;5;15m ÐÐµÐ¾Ð½Ð¾Ð²Ð°Ñ ÑÑ…ÐµÐ¼Ð°               â•‘\033[0m"
    echo -e "\033[38;5;202mâ•‘  4. \033[38;5;211mâ–‰â–‰\033[38;5;158mâ–‰â–‰\033[38;5;229mâ–‰â–‰\033[38;5;202m ÐŸÐ°ÑÑ‚ÐµÐ»ÑŒÐ½Ð°Ñ ÑÑ…ÐµÐ¼Ð°            â•‘\033[0m"
    echo -e "\033[38;5;46mâ•‘  5. \033[38;5;46mâ–‰â–‰â–‰â–‰\033[38;5;46m ÐœÐ°Ñ‚Ñ€Ð¸Ñ‡Ð½Ð°Ñ ÑÑ…ÐµÐ¼Ð°               â•‘\033[0m"
    echo -e "\033[38;5;196mâ•‘  6. \033[38;5;196mâ–‰â–‰\033[38;5;202mâ–‰â–‰\033[38;5;208mâ–‰â–‰\033[38;5;196m ÐžÐ³Ð½ÐµÐ½Ð½Ð°Ñ ÑÑ…ÐµÐ¼Ð°               â•‘\033[0m"
    echo -e "\033[38;5;39mâ•‘  7. \033[38;5;39mâ–‰â–‰\033[38;5;45mâ–‰â–‰\033[38;5;51mâ–‰â–‰\033[38;5;39m ÐžÐºÐµÐ°Ð½ÑÐºÐ°Ñ ÑÑ…ÐµÐ¼Ð°              â•‘\033[0m"
    echo -e "\033[38;5;129mâ•‘  8. \033[38;5;196mâ–‰\033[38;5;46mâ–‰\033[38;5;226mâ–‰\033[38;5;21mâ–‰\033[38;5;129mâ–‰\033[38;5;51mâ–‰\033[38;5;129m Ð Ð°Ð´ÑƒÐ¶Ð½Ð°Ñ ÑÑ…ÐµÐ¼Ð°               â•‘\033[0m"
    echo -e "\033[38;5;15mâ•‘  9. ðŸŽ¨ ÐÐ°ÑÑ‚Ñ€Ð¾Ð¸Ñ‚ÑŒ Ð²Ñ€ÑƒÑ‡Ð½ÑƒÑŽ                    â•‘\033[0m"
    echo -e "\033[38;5;226mâ•‘  0. â†©ï¸  ÐÐ°Ð·Ð°Ð´                                â•‘\033[0m"
    echo -e "\033[38;5;21mâ•‘                                                  â•‘\033[0m"
    echo -e "\033[38;5;129mâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\033[0m"
    
    echo -e "\n\033[38;5;51m[i] Ð¢ÐµÐºÑƒÑ‰Ð°Ñ ÑÑ…ÐµÐ¼Ð°: $(grep '^scheme=' "$COLOR_FILE" 2>/dev/null | cut -d= -f2 || echo "default")\033[0m"
    echo -e "\033[38;5;226mâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\033[0m"
}

apply_scheme() {
    local scheme_name="$1"
    
    if [ -z "${color_schemes[$scheme_name]}" ]; then
        echo -e "\033[38;5;196m[!] ÐÐµÐ¸Ð·Ð²ÐµÑÑ‚Ð½Ð°Ñ ÑÑ…ÐµÐ¼Ð°: $scheme_name\033[0m"
        return 1
    fi
    
    # Ð¡Ð¾Ñ…Ñ€Ð°Ð½ÐµÐ½Ð¸Ðµ ÑÑ…ÐµÐ¼Ñ‹ Ð² Ñ„Ð°Ð¹Ð»
    echo "scheme=$scheme_name" > "$COLOR_FILE"
    echo "${color_schemes[$scheme_name]}" >> "$COLOR_FILE"
    
    echo -e "\033[38;5;46m[âœ“] Ð¡Ñ…ÐµÐ¼Ð° '$scheme_name' Ð¿Ñ€Ð¸Ð¼ÐµÐ½ÐµÐ½Ð°!\033[0m"
    echo -e "\033[38;5;226m[i] ÐŸÐµÑ€ÐµÐ·Ð°Ð¿ÑƒÑÑ‚Ð¸Ñ‚Ðµ Terminal : Encryptor Ð´Ð»Ñ Ð¿Ñ€Ð¸Ð¼ÐµÐ½ÐµÐ½Ð¸Ñ\033[0m"
    
    # ÐŸÐ¾ÐºÐ°Ð·Ð°Ñ‚ÑŒ Ð¿Ñ€ÐµÐ´Ð¿Ñ€Ð¾ÑÐ¼Ð¾Ñ‚Ñ€
    show_preview "$scheme_name"
    
    sleep 2
}

show_preview() {
    local scheme_name="$1"
    
    eval "${color_schemes[$scheme_name]}"
    
    clear
    echo -e "${CYAN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
    echo -e "${GREEN}â•‘      ÐŸÐ Ð•Ð”ÐŸÐ ÐžÐ¡ÐœÐžÐ¢Ð : $scheme_name Ð¡Ð¥Ð•ÐœÐ          â•‘${NC}"
    echo -e "${CYAN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    
    echo -e "\n${RED}â–‰â–‰â–‰â–‰ ÐšÑ€Ð°ÑÐ½Ñ‹Ð¹ Ñ‚ÐµÐºÑÑ‚${NC}"
    echo -e "${GREEN}â–‰â–‰â–‰â–‰ Ð—ÐµÐ»Ñ‘Ð½Ñ‹Ð¹ Ñ‚ÐµÐºÑÑ‚${NC}"
    echo -e "${YELLOW}â–‰â–‰â–‰â–‰ Ð–Ñ‘Ð»Ñ‚Ñ‹Ð¹ Ñ‚ÐµÐºÑÑ‚${NC}"
    echo -e "${BLUE}â–‰â–‰â–‰â–‰ Ð¡Ð¸Ð½Ð¸Ð¹ Ñ‚ÐµÐºÑÑ‚${NC}"
    echo -e "${PURPLE}â–‰â–‰â–‰â–‰ Ð¤Ð¸Ð¾Ð»ÐµÑ‚Ð¾Ð²Ñ‹Ð¹ Ñ‚ÐµÐºÑÑ‚${NC}"
    echo -e "${CYAN}â–‰â–‰â–‰â–‰ Ð“Ð¾Ð»ÑƒÐ±Ð¾Ð¹ Ñ‚ÐµÐºÑÑ‚${NC}"
    echo -e "${WHITE}â–‰â–‰â–‰â–‰ Ð‘ÐµÐ»Ñ‹Ð¹ Ñ‚ÐµÐºÑÑ‚${NC}"
    echo -e "${ORANGE}â–‰â–‰â–‰â–‰ ÐžÑ€Ð°Ð½Ð¶ÐµÐ²Ñ‹Ð¹ Ñ‚ÐµÐºÑÑ‚${NC}"
    
    echo -e "\n${BG_BLACK}${WHITE} Ð§Ñ‘Ñ€Ð½Ñ‹Ð¹ Ñ„Ð¾Ð½ ${NC}"
    echo -e "${BG_RED}${WHITE} ÐšÑ€Ð°ÑÐ½Ñ‹Ð¹ Ñ„Ð¾Ð½ ${NC}"
    echo -e "${BG_GREEN}${BLACK} Ð—ÐµÐ»Ñ‘Ð½Ñ‹Ð¹ Ñ„Ð¾Ð½ ${NC}"
    
    echo -e "\n${YELLOW}[i] ÐÐ°Ð¶Ð¼Ð¸Ñ‚Ðµ Enter Ð´Ð»Ñ Ð¿Ñ€Ð¾Ð´Ð¾Ð»Ð¶ÐµÐ½Ð¸Ñ...${NC}"
    read
}

custom_colors() {
    clear
    echo -e "\033[38;5;51mâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—\033[0m"
    echo -e "\033[38;5;46mâ•‘          ÐÐÐ¡Ð¢Ð ÐžÐ™ÐšÐ Ð¦Ð’Ð•Ð¢ÐžÐ’ Ð’Ð Ð£Ð§ÐÐ£Ð®               â•‘\033[0m"
    echo -e "\033[38;5;51mâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\033[0m"
    
    echo -e "\n\033[38;5;226m[i] Ð¤Ð¾Ñ€Ð¼Ð°Ñ‚: \033[38;5;51m\\033[38;5;XXXm\033[0m (XXX = ÐºÐ¾Ð´ Ñ†Ð²ÐµÑ‚Ð° 0-255)"
    echo -e "\033[38;5;226m[i] ÐŸÑ€Ð¸Ð¼ÐµÑ€: \033[38;5;51m\\033[38;5;196m\033[38;5;196m (ÐºÑ€Ð°ÑÐ½Ñ‹Ð¹)\033[0m"
    
    echo -e "\n\033[38;5;46mÐ”Ð¾ÑÑ‚ÑƒÐ¿Ð½Ñ‹Ðµ ÐºÐ¾Ð´Ñ‹ Ñ†Ð²ÐµÑ‚Ð¾Ð²:\033[0m"
    echo -e "0-15:    \033[38;5;0mâ–ˆ\033[38;5;1mâ–ˆ\033[38;5;2mâ–ˆ\033[38;5;3mâ–ˆ\033[38;5;4mâ–ˆ\033[38;5;5mâ–ˆ\033[38;5;6mâ–ˆ\033[38;5;7mâ–ˆ\033[38;5;8mâ–ˆ\033[38;5;9mâ–ˆ\033[38;5;10mâ–ˆ\033[38;5;11mâ–ˆ\033[38;5;12mâ–ˆ\033[38;5;13mâ–ˆ\033[38;5;14mâ–ˆ\033[38;5;15mâ–ˆ\033[0m"
    echo -e "16-231:  \033[38;5;16mâ–ˆ\033[38;5;17mâ–ˆ\033[38;5;18mâ–ˆ\033[38;5;19mâ–ˆ\033[38;5;20mâ–ˆ\033[38;5;21mâ–ˆ\033[38;5;22mâ–ˆ...\033[0m (216 Ñ†Ð²ÐµÑ‚Ð¾Ð²)"
    echo -e "232-255: \033[38;5;232mâ–ˆ\033[38;5;233mâ–ˆ\033[38;5;234mâ–ˆ\033[38;5;235mâ–ˆ\033[38;5;236mâ–ˆ\033[38;5;237mâ–ˆ\033[38;5;238mâ–ˆ...\033[0m (24 Ð¾Ñ‚Ñ‚ÐµÐ½ÐºÐ° ÑÐµÑ€Ð¾Ð³Ð¾)"
    
    read -p $'\n\033[38;5;226mÐšÐ¾Ð´ Ð´Ð»Ñ RED (Ð¿Ð¾ ÑƒÐ¼Ð¾Ð»Ñ‡Ð°Ð½Ð¸ÑŽ 196): \033[0m' red_code
    read -p $'\033[38;5;226mÐšÐ¾Ð´ Ð´Ð»Ñ GREEN (Ð¿Ð¾ ÑƒÐ¼Ð¾Ð»Ñ‡Ð°Ð½Ð¸ÑŽ 46): \033[0m' green_code
    read -p $'\033[38;5;226mÐšÐ¾Ð´ Ð´Ð»Ñ YELLOW (Ð¿Ð¾ ÑƒÐ¼Ð¾Ð»Ñ‡Ð°Ð½Ð¸ÑŽ 226): \033[0m' yellow_code
    read -p $'\033[38;5;226mÐšÐ¾Ð´ Ð´Ð»Ñ BLUE (Ð¿Ð¾ ÑƒÐ¼Ð¾Ð»Ñ‡Ð°Ð½Ð¸ÑŽ 21): \033[0m' blue_code
    read -p $'\033[38;5;226mÐšÐ¾Ð´ Ð´Ð»Ñ PURPLE (Ð¿Ð¾ ÑƒÐ¼Ð¾Ð»Ñ‡Ð°Ð½Ð¸ÑŽ 129): \033[0m' purple_code
    read -p $'\033[38;5;226mÐšÐ¾Ð´ Ð´Ð»Ñ CYAN (Ð¿Ð¾ ÑƒÐ¼Ð¾Ð»Ñ‡Ð°Ð½Ð¸ÑŽ 51): \033[0m' cyan_code
    read -p $'\033[38;5;226mÐšÐ¾Ð´ Ð´Ð»Ñ WHITE (Ð¿Ð¾ ÑƒÐ¼Ð¾Ð»Ñ‡Ð°Ð½Ð¸ÑŽ 15): \033[0m' white_code
    read -p $'\033[38;5;226mÐšÐ¾Ð´ Ð´Ð»Ñ ORANGE (Ð¿Ð¾ ÑƒÐ¼Ð¾Ð»Ñ‡Ð°Ð½Ð¸ÑŽ 202): \033[0m' orange_code
    
    # Ð£ÑÑ‚Ð°Ð½Ð¾Ð²ÐºÐ° Ð·Ð½Ð°Ñ‡ÐµÐ½Ð¸Ð¹ Ð¿Ð¾ ÑƒÐ¼Ð¾Ð»Ñ‡Ð°Ð½Ð¸ÑŽ
    red_code=${red_code:-196}
    green_code=${green_code:-46}
    yellow_code=${yellow_code:-226}
    blue_code=${blue_code:-21}
    purple_code=${purple_code:-129}
    cyan_code=${cyan_code:-51}
    white_code=${white_code:-15}
    orange_code=${orange_code:-202}
    
    # Ð¡Ð¾Ð·Ð´Ð°Ð½Ð¸Ðµ ÐºÐ°ÑÑ‚Ð¾Ð¼Ð½Ð¾Ð¹ ÑÑ…ÐµÐ¼Ñ‹
    custom_scheme="RED='\\033[38;5;${red_code}m' GREEN='\\033[38;5;${green_code}m' YELLOW='\\033[38;5;${yellow_code}m' BLUE='\\033[38;5;${blue_code}m' PURPLE='\\033[38;5;${purple_code}m' CYAN='\\033[38;5;${cyan_code}m' WHITE='\\033[38;5;${white_code}m' ORANGE='\\033[38;5;${orange_code}m' BG_BLACK='\\033[48;5;0m' BG_RED='\\033[48;5;1m' BG_GREEN='\\033[48;5;2m' NC='\\033[0m'"
    
    # Ð¡Ð¾Ñ…Ñ€Ð°Ð½ÐµÐ½Ð¸Ðµ
    echo "scheme=custom" > "$COLOR_FILE"
    echo "$custom_scheme" >> "$COLOR_FILE"
    
    echo -e "\n\033[38;5;46m[âœ“] ÐšÐ°ÑÑ‚Ð¾Ð¼Ð½Ð°Ñ ÑÑ…ÐµÐ¼Ð° ÑÐ¾Ñ…Ñ€Ð°Ð½ÐµÐ½Ð°!\033[0m"
    echo -e "\033[38;5;226m[i] ÐŸÐµÑ€ÐµÐ·Ð°Ð¿ÑƒÑÑ‚Ð¸Ñ‚Ðµ Terminal : Encryptor\033[0m"
    
    sleep 2
}

# ÐžÑÐ½Ð¾Ð²Ð½Ð¾Ð¹ Ñ†Ð¸ÐºÐ»
mkdir -p "$CONFIG_DIR"

while true; do
    show_menu
    read -p $'\033[38;5;51mÐ’Ñ‹Ð±ÐµÑ€Ð¸Ñ‚Ðµ ÑÑ…ÐµÐ¼Ñƒ (0-9): \033[0m' choice
    
    case $choice in
        1) apply_scheme "default" ;;
        2) apply_scheme "dark" ;;
        3) apply_scheme "neon" ;;
        4) apply_scheme "pastel" ;;
        5) apply_scheme "matrix" ;;
        6) apply_scheme "fire" ;;
        7) apply_scheme "ocean" ;;
        8) apply_scheme "rainbow" ;;
        9) custom_colors ;;
        0) 
            echo -e "\033[38;5;226m[i] Ð’Ð¾Ð·Ð²Ñ€Ð°Ñ‚...\033[0m"
            exit 0
            ;;
        *)
            echo -e "\033[38;5;196m[!] ÐÐµÐ²ÐµÑ€Ð½Ñ‹Ð¹ Ð²Ñ‹Ð±Ð¾Ñ€\033[0m"
            sleep 1
            ;;
    esac
done
EOF

