    ["matrix"]="RED='\033[38;5;46m' GREEN='\033[38;5;46m' YELLOW='\033[38;5;46m' BLUE='\033[38;5;46m' PURPLE='\033[38;5;46m' CYAN='\033[38;5;46m' WHITE='\033[38;5;46m' ORANGE='\033[38;5;46m' BG_BLACK='\033[40m' BG_RED='\033[40m' BG_GREEN='\033[40m' NC='\033[0m'"
