#!/bin/bash

# Terminal : Encryptor - Ð£ÑÑ‚Ð°Ð½Ð¾Ð²Ñ‰Ð¸Ðº
# ÐÐ²Ñ‚Ð¾Ñ€: terminaldestrroyrr
# Telegram: @bred37

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m'

clear
echo -e "${CYAN}"
echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
echo "â•‘       Ð£Ð¡Ð¢ÐÐÐžÐ’ÐšÐ TERMINAL : ENCRYPTOR v1.1       â•‘"
echo "â•‘           ÐÐ²Ñ‚Ð¾Ñ€: terminaldestrroyrr             â•‘"
echo "â•‘            Telegram: @bred37                    â•‘"
echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo -e "${NC}"

# ÐŸÑ€Ð¾Ð²ÐµÑ€ÐºÐ° Termux
if [ ! -d "/data/data/com.termux" ]; then
    echo -e "${RED}[!] ÐžÑˆÐ¸Ð±ÐºÐ°: Ð¡ÐºÑ€Ð¸Ð¿Ñ‚ Ð¿Ñ€ÐµÐ´Ð½Ð°Ð·Ð½Ð°Ñ‡ÐµÐ½ Ð´Ð»Ñ Termux${NC}"
    exit 1
fi

echo -e "${YELLOW}[i] ÐžÐ±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¸Ðµ Ð¿Ð°ÐºÐµÑ‚Ð¾Ð²...${NC}"
pkg update -y && pkg upgrade -y

echo -e "${YELLOW}[i] Ð£ÑÑ‚Ð°Ð½Ð¾Ð²ÐºÐ° Ð·Ð°Ð²Ð¸ÑÐ¸Ð¼Ð¾ÑÑ‚ÐµÐ¹...${NC}"
pkg install -y \
    bash \
    openssl \
    python \
    python3 \
    curl \
    wget \
    git \
    nano \
    vim \
    zip \
    unzip \
    tar \
    coreutils \
    termux-api \
    figlet \
    toilet

echo -e "${YELLOW}[i] Ð¡Ð¾Ð·Ð´Ð°Ð½Ð¸Ðµ Ð´Ð¸Ñ€ÐµÐºÑ‚Ð¾Ñ€Ð¸Ð¹...${NC}"
mkdir -p ~/.terminal_encryptor/{config,data,backup,logs}
mkdir -p ~/bin

echo -e "${YELLOW}[i] Ð—Ð°Ð³Ñ€ÑƒÐ·ÐºÐ° Ð¾ÑÐ½Ð¾Ð²Ð½Ð¾Ð³Ð¾ ÑÐºÑ€Ð¸Ð¿Ñ‚Ð°...${NC}"
curl -s -o ~/.terminal_encryptor/terminal_encryptor.sh \
    https://raw.githubusercontent.com/terminaldestrroyrr/terminal-encryptor/main/terminal_encryptor.sh

if [ $? -ne 0 ]; then
    echo -e "${YELLOW}[i] ÐÐ»ÑŒÑ‚ÐµÑ€Ð½Ð°Ñ‚Ð¸Ð²Ð½Ð°Ñ Ð·Ð°Ð³Ñ€ÑƒÐ·ÐºÐ°...${NC}"
    wget -q -O ~/.terminal_encryptor/terminal_encryptor.sh \
        https://raw.githubusercontent.com/terminaldestrroyrr/terminal-encryptor/main/terminal_encryptor.sh
fi

if [ ! -f ~/.terminal_encryptor/terminal_encryptor.sh ]; then
    echo -e "${RED}[!] ÐÐµ ÑƒÐ´Ð°Ð»Ð¾ÑÑŒ Ð·Ð°Ð³Ñ€ÑƒÐ·Ð¸Ñ‚ÑŒ Ð¾ÑÐ½Ð¾Ð²Ð½Ð¾Ð¹ ÑÐºÑ€Ð¸Ð¿Ñ‚${NC}"
    echo -e "${YELLOW}[i] Ð¡Ð¾Ð·Ð´Ð°Ð½Ð¸Ðµ Ð±Ð°Ð·Ð¾Ð²Ð¾Ð³Ð¾ ÑÐºÑ€Ð¸Ð¿Ñ‚Ð°...${NC}"
    
    cat > ~/.terminal_encryptor/terminal_encryptor.sh << 'EOF'
#!/bin/bash
echo "Terminal : Encryptor v1.1"
echo "Ð—Ð°Ð³Ñ€ÑƒÐ·Ð¸Ñ‚Ðµ Ð¿Ð¾Ð»Ð½ÑƒÑŽ Ð²ÐµÑ€ÑÐ¸ÑŽ Ñ GitHub"
echo "https://github.com/terminaldestrroyrr/terminal-encryptor"
EOF
fi

chmod +x ~/.terminal_encryptor/terminal_encryptor.sh

echo -e "${YELLOW}[i] Ð£ÑÑ‚Ð°Ð½Ð¾Ð²ÐºÐ° ÑƒÑ‚Ð¸Ð»Ð¸Ñ‚Ñ‹ ÑÐ¼ÐµÐ½Ñ‹ Ñ†Ð²ÐµÑ‚Ð°...${NC}"
cat > ~/.terminal_encryptor/color_changer.sh << 'EOF'
#!/bin/bash

# Terminal : Encryptor - Ð¡Ð¼ÐµÐ½Ð° Ñ†Ð²ÐµÑ‚Ð¾Ð²Ð¾Ð¹ ÑÑ…ÐµÐ¼Ñ‹
# ÐÐ²Ñ‚Ð¾Ñ€: terminaldestrroyrr

CONFIG_DIR="$HOME/.terminal_encryptor/config"
COLOR_FILE="$CONFIG_DIR/colors.cfg"

# Ð¦Ð²ÐµÑ‚Ð¾Ð²Ñ‹Ðµ ÑÑ…ÐµÐ¼Ñ‹
declare -A color_schemes=(
    ["default"]="RED='\033[0;31m' GREEN='\033[0;32m' YELLOW='\033[1;33m' BLUE='\033[0;34m' PURPLE='\033[0;35m' CYAN='\033[0;36m' WHITE='\033[1;37m' ORANGE='\033[38;5;214m' BG_BLACK='\033[40m' BG_RED='\033[41m' BG_GREEN='\033[42m' NC='\033[0m'"
    ["dark"]="RED='\033[38;5;196m' GREEN='\033[38;5;46m' YELLOW='\033[38;5;226m' BLUE='\033[38;5;27m' PURPLE='\033[38;5;129m' CYAN='\033[38;5;51m' WHITE='\033[38;5;255m' ORANGE='\033[38;5;202m' BG_BLACK='\033[48;5;0m' BG_RED='\033[48;5;88m' BG_GREEN='\033[48;5;22m' NC='\033[0m'"
    ["neon"]="RED='\033[38;5;197m' GREEN='\033[38;5;48m' YELLOW='\033[38;5;227m' BLUE='\033[38;5;39m' PURPLE='\033[38;5;201m' CYAN='\033[38;5;87m' WHITE='\033[38;5;15m' ORANGE='\033[38;5;208m' BG_BLACK='\033[48;5;0m' BG_RED='\033[48;5;90m' BG_GREEN='\033[48;5;29m' NC='\033[0m'"
